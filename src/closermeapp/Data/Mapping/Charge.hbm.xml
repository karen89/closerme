<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="closermeapp.Bussiness.Entities.Charge" table="charge">
        <id name="chargeID" column="chargeID">
            <generator class="identity"/>

        </id>
        <property name="concept" type="java.lang.String" column="concept"/>
        <property name="amount"  column="amount"/>
    </class>
</hibernate-mapping>